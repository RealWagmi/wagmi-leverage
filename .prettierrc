{
    "plugins": [
        "prettier-plugin-solidity"
    ],
    "overrides": [
        {
            "files": [
                "*.sol",
                "*.js",
                "*.ts"
            ],
            "options": {
                "printWidth": 100,
                "tabWidth": 4,
                "useTabs": false,
                "semi": true,
                "singleQuote": false,
                "bracketSpacing": true,
                "trailingComma": "es5",
                "arrowParens": "always"
            }
        },
        {
            "files": [
                ".prettierrc",
                "*.json"
            ],
            "options": {
                "parser": "json"
            }
        }
    ]
}